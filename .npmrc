# Enable strict peer dependencies
strict-peer-dependencies=false

# Use workspace protocol for internal packages
prefer-workspace-packages=true

# Shamefully hoist dependencies (helps with some packages that don't support workspaces well)
shamefully-hoist=false

# Public hoist pattern (hoist packages that are used by multiple workspaces)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*

# Auto install peers (helps with workspace dependencies)
auto-install-peers=true

# Network and registry settings
registry=https://registry.npmjs.org/
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000
network-concurrency=16
strict-ssl=true

